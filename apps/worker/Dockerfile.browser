FROM mcr.microsoft.com/playwright:v1.50.0-noble

EXPOSE 9222

# Find the Chromium binary path and launch with CDP enabled
# Shell form so the glob expands correctly
CMD /ms-playwright/chromium-*/chrome-linux/chrome \
  --headless=new \
  --no-sandbox \
  --disable-gpu \
  --disable-dev-shm-usage \
  --remote-debugging-address=0.0.0.0 \
  --remote-debugging-port=9222 \
  --disable-background-networking \
  --disable-default-apps \
  --disable-extensions \
  --disable-sync \
  --no-first-run
